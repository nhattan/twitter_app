<p id="notice"><%= notice %></p>

<%= render "tweets/form" %>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Created at</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="tweets">
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.user.name %></td>
        <td><%= time_ago_in_words(tweet.created_at) %></td>
        <td><%= tweet.text %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Older', root_path(max_id: @tweets.last.id) %>